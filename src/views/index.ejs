<%- include('includes/head')%>
<%- include('includes/nav_bar')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 my-1 ">

      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Meus <%= contatos.length%> contato(s) de <% if(user){%><%=user.email%><%}else{%>...<%}%></p>

      <%- include('includes/messages') %>

      <div class="responsive-table">
        <table class="table">
          <tr>
            <td>Apelido</td>
            <td>Nome</td>
            <td>Telefone</td>
            <td>Email</td>
            <td></td>
            <td></td>
          </tr>
          <%for(let contato of contatos){%>
            <tr>
              <td><%=contato.apelido%></td>
              <td><%=contato.nome%></td>
              <td><%=contato.telefone%></td>
              <td><%=contato.email%></td>
              <td><a href="/contato/index/<%=contato._id%>">Editar</a> </td>
              <td><a href="/contato/delete/<%=contato._id%>">Excluir</a> </td>
            </tr>
          <%}%>


        </table>
      </div>
      
    </div>
    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer')%>

